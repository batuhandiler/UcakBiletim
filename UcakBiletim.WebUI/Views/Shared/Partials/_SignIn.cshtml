@model User

<!-- BEGIN Giris yap modal -->
<div class="modal fade" id="girisYapModal" tabindex="-1" role="dialog" aria-labelledby="girisYapModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="girisYapModalLabel">Giriş Yap</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="girisYapForm">
                    <div class="form-group">
                        <label for="girisYapMail" class="col-form-label">Mail</label>
                        <input type="email" class="form-control" id="girisYapMail" asp-for="Mail">
                    </div>
                    <div class="form-group">
                        <label for="girisYapSifre" class="col-form-label">Şifre</label>
                        <input type="password" class="form-control" id="girisYapSifre" asp-for="Password">
                    </div>
                </form>
                <div>
                    <label>Üye değil misin?<bold><button class="btn btn-link" onclick="ShowSignUpModal()">Üye Ol</button></bold></label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="SignIn()">Giriş Yap</button>
            </div>
        </div>
    </div>
</div>
<!-- END Giris yap modal -->