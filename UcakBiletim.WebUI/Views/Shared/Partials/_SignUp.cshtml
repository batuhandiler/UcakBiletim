@model User

<!-- BEGIN Uye ol modal -->
<div class="modal fade" id="uyeOlModal" tabindex="-1" role="dialog" aria-labelledby="uyeOlModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uyeOlModalLabel">Üye Ol</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="uyeOlForm">
                    <div class="form-group">
                        <label for="uyeOlIsim" class="col-form-label">İsim</label>
                        <input type="text" class="form-control" id="uyeOlIsim" asp-for="Name">
                    </div>
                    <div class="form-group">
                        <label for="uyeOlSoyisim" class="col-form-label">Soy İsim</label>
                        <input type="text" class="form-control" id="uyeOlSoyisim" asp-for="SurName">
                    </div>
                    <div class="form-group">
                        <label for="uyeOlMail" class="col-form-label">Mail</label>
                        <input type="email" class="form-control" id="uyeOlMail" asp-for="Mail">
                    </div>
                    <div class="form-group">
                        <label for="uyeOlSifre" class="col-form-label">Şifre</label>
                        <input type="text" class="form-control" id="uyeOlSifre" asp-for="Password">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="SignUp()">Üye Ol</button>
            </div>
        </div>
    </div>
</div>
<!-- END Uye ol modal -->